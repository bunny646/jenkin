pipeline {
    agent { node { label 'agent' } }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'ls -ltr'
                sh 'pwd'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }

        }
    
       
    }
     post { 
        always { 
            echo 'I will always say Hello again!'
        }
        success{
            echo ' i will run when job is success'
        }
        failure{
            echo ' i will run when the job fails'
        }

    }
}




